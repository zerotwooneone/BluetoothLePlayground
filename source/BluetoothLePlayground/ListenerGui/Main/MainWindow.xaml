<Window x:Class="ListenerGui.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListenerGui"
        xmlns:converters="clr-namespace:ListenerGui.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <converters:MacAddressConverter x:Key="MacAddressConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel 
            Grid.Row="0"
            Orientation="Horizontal">
            <Button Command="{Binding StartCommand, Mode=OneWay}">Start</Button>
            <Button Command="{Binding StopCommand, Mode=OneWay}">Stop</Button>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding TestText, Mode=OneWay}"></TextBlock>
        </StackPanel>
        <ListView 
            Grid.Row="1"
            ItemsSource="{Binding Ads}">
            <ListView.View>
                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Ad Information">
                    <GridViewColumn DisplayMemberBinding="{Binding BluetoothAddress, Mode=OneWay, Converter={StaticResource MacAddressConverter}}" Header="Address" Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding RawSignalStrengthInDBm}" Header="DBm" Width="100" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
